@model IEnumerable<CURDOppMVC.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Employee List | @Html.ActionLink("Add New","Create")</h2>

<table class="table-bordered" width="75%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Emp No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile No</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.EmpNo</td>
                <td>@e.FirstName</td>
                <td>@e.LastName</td>
                <td>@e.Email</td>
                <td>@e.MobileNo</td>
                <td>@Html.ActionLink("Edit", "EditEmp", new {Id=e.Id})|@Html.ActionLink("Delete", "DeleteEmp", new { Id = e.Id }, new {onclick="return confirm('are you sure you want to delete this record?');"})</td>
            </tr>

        }
    </tbody>
</table>