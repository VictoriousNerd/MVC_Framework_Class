@model ContactDetailsWebApp.Models.ContactDetails
@{
    ViewBag.Title = "AddContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-5">Add a Contact</h2>

<h3>
    @ViewBag.Msg
</h3>

@using (Html.BeginForm("AddContact", "ContactDetails", FormMethod.Post))
{
    <div class="form-group mt-3">
        @Html.DisplayNameFor(c => c.FirstName)
        @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-3">
        @Html.DisplayNameFor(c => c.LastName)
        @Html.TextBoxFor(c => c.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-3">
        @Html.DisplayNameFor(c => c.EmailAddress)
        @Html.TextBoxFor(c => c.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.EmailAddress, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-3">
        @Html.DisplayNameFor(c => c.PhoneNumber)
        @Html.TextBoxFor(c => c.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.PhoneNumber, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-3">
        @Html.DisplayNameFor(c => c.Role)
        @Html.TextBoxFor(c => c.Role, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Role, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mt-3">
        @Html.DisplayNameFor(c => c.Password)
        @Html.TextBoxFor(c => c.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Submit" class="btn btn-primary mt-3" />
}