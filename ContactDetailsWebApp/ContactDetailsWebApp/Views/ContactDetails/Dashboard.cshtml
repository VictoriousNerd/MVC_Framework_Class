@model IEnumerable<ContactDetailsWebApp.Models.ContactDetails>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-5">Dashboard</h2>

<div class="row">
    <div class="col-4">
        @Html.Partial("_UsersCountWidget")
    </div>
    <div class="col-4">
        @Html.Partial("_ManagerCountWidget")
    </div>
    <div class="col-4">
        @Html.Partial("_EmployeeCountWidget")
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Role</th>
                    <th scope="col">Controls</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.FirstName</td>
                        <td>@c.LastName</td>
                        <td>@c.EmailAddress</td>
                        <td>@c.PhoneNumber</td>
                        <td>@c.Role</td>
                        <td>@Html.ActionLink("Update", "UpdateContact", new { Id = c.Id }) | @Html.ActionLink("View", "ViewContact", new { Id = c.Id }) | @Html.ActionLink("Delete", "DeleteContact", new { Id = c.Id }, new { onclick = "return confirm('Are you sure you want to delete this record?');" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


