@model IEnumerable<ProductDatabaseForm.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-5">Product List&ensp;|&ensp;@Html.ActionLink("Create", "Create")</h2>

<table class="table mt-5">
    <thead>
        <tr>      
            <th scope="col">ProductNo</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductNo</td>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td>@p.Price</td>
                <td>@Html.ActionLink("Edit", "Edit", new { Id = p.Id }) | @Html.ActionLink("Delete", "Delete", new { Id = p.Id }, new { onclick = "return confirm('Are you sure you want to delete this record?');" }) | @Html.ActionLink("View", "View", new { Id = p.Id })</td>
            </tr>
        }
    </tbody>
</table>